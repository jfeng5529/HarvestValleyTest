<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.bt_1n3_05.harvestvalleytest.SoundScreen"
    android:background="@drawable/background">

    <Button
        android:id="@+id/button"
        android:layout_width="280"
        android:layout_height="50"
        android:layout_marginTop="116dp"
        android:text="Spring (The Valley Comes Alive)"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp" />

    <Button
        android:id="@+id/button2"
        android:layout_width="280"
        android:layout_height="50"
        android:layout_marginTop="8dp"
        android:text="Spring (It's A Big World Outside)"
        app:layout_constraintTop_toBottomOf="@+id/button"
        tools:layout_editor_absoluteX="28dp" />

    <Button
        android:id="@+id/button3"
        android:layout_width="280"
        android:layout_height="50"
        android:layout_marginTop="8dp"
        android:text="Summer (Nature's Crescendo)"
        app:layout_constraintTop_toBottomOf="@+id/button2"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button4"
        android:layout_width="280"
        android:layout_height="50"
        android:layout_marginTop="100dp"
        android:text="Winter (Nocturne Of Ice)"
        app:layout_constraintTop_toBottomOf="@+id/button3"
        tools:layout_editor_absoluteX="16dp" />

    <Button
        android:id="@+id/button5"
        android:layout_width="280"
        android:layout_height="50"
        android:layout_marginTop="28dp"
        android:text=" Fall (The Smell Of Mushroom)"
        app:layout_constraintTop_toBottomOf="@+id/button4"
        tools:layout_editor_absoluteX="0dp" />
</android.support.constraint.ConstraintLayout>
