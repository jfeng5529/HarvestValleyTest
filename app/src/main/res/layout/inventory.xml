<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="15dp"
        android:contentDescription="@string/market"
        android:fontFamily="@font/architects_daughter"
        android:text="@string/market"
        android:textAppearance="@style/TextAppearance.AppCompat.Light.SearchResult.Title"
        android:textColor="@color/colorPrimary"
        android:textSize="60sp"
        android:typeface="serif" />

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="400dp"
        android:layout_height="300dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:adjustViewBounds="true"
        android:contentDescription="@string/pane"
        app:srcCompat="@drawable/inventory" />

    <ImageButton
        android:id="@+id/c1"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/imageView2"
        android:layout_marginEnd="9dp"
        android:layout_marginTop="64dp"
        android:layout_toStartOf="@+id/textView"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/corn"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cornseeds" />

    <ImageButton
        android:id="@+id/c2"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/textView"
        android:layout_alignTop="@+id/c1"
        android:layout_marginStart="13dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/garlic"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/garlicseeds" />

    <ImageButton
        android:id="@+id/c3"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/c2"
        android:layout_marginLeft="19dp"
        android:layout_marginStart="19dp"
        android:layout_toEndOf="@+id/c2"
        android:layout_toRightOf="@+id/c2"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pepper"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pepperseeds" />

    <ImageButton
        android:id="@+id/imageButton4"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/c3"
        android:layout_marginLeft="26dp"
        android:layout_marginStart="26dp"
        android:layout_toEndOf="@+id/c3"
        android:layout_toRightOf="@+id/c3"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/potato"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/potatoseeds" />

    <ImageButton
        android:id="@+id/imageButton5"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/imageButton4"
        android:layout_marginLeft="20dp"
        android:layout_marginStart="20dp"
        android:layout_toEndOf="@+id/imageButton4"
        android:layout_toRightOf="@+id/imageButton4"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/strawberry"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/strawberryseeds" />

    <ImageButton
        android:id="@+id/imageButton9"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/imageButton5"
        android:layout_toEndOf="@+id/textView"
        android:layout_toRightOf="@+id/textView"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/tomato"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/tomatoseeds" />

    <ImageButton
        android:id="@+id/imageButton7"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/c1"
        android:layout_alignStart="@+id/c1"
        android:layout_below="@+id/c1"
        android:layout_marginTop="19dp"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/wheat"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/wheatseeds" />

    <ImageButton
        android:id="@+id/imageButton8"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignTop="@+id/imageButton7"
        android:layout_toStartOf="@+id/c3"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/blackchicken"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/blackchicken" />

    <ImageButton
        android:id="@+id/imageButton10"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/c3"
        android:layout_alignStart="@+id/c3"
        android:layout_alignTop="@+id/imageButton8"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/brownchicken"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/brownchicken" />

    <ImageButton
        android:id="@+id/imageButton11"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/imageButton4"
        android:layout_alignStart="@+id/imageButton4"
        android:layout_alignTop="@+id/imageButton10"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/whitechicken"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/whitechicken" />

    <ImageButton
        android:id="@+id/imageButton12"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/imageButton5"
        android:layout_alignTop="@+id/imageButton11"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/cow"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/cow" />

    <ImageButton
        android:id="@+id/imageButton13"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/imageButton9"
        android:layout_alignStart="@+id/imageButton9"
        android:layout_alignTop="@+id/imageButton12"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/duck"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/duck" />

    <ImageButton
        android:id="@+id/imageButton14"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/imageButton7"
        android:layout_below="@+id/imageButton7"
        android:layout_marginTop="25dp"
        android:background="@android:color/transparent"
        android:contentDescription="@string/pig"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/pig" />

    <ImageButton
        android:id="@+id/imageButton15"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignStart="@+id/imageButton8"
        android:layout_alignTop="@+id/imageButton14"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/rabbit"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/rabbit" />

    <ImageButton
        android:id="@+id/imageButton17"
        android:layout_width="37dp"
        android:layout_height="49dp"
        android:layout_alignLeft="@+id/imageButton10"
        android:layout_alignStart="@+id/imageButton10"
        android:layout_alignTop="@+id/imageButton15"
        android:adjustViewBounds="true"
        android:background="@android:color/transparent"
        android:contentDescription="@string/sheep"
        android:onClick="onClickItem"
        android:scaleType="fitCenter"
        app:srcCompat="@drawable/sheep" />

    <Button
        android:id="@+id/buyButton"
        style="@style/Widget.AppCompat.Button"
        android:layout_width="90dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="55dp"
        android:layout_toStartOf="@+id/imageButton5"
        android:background="@drawable/inventorybackground"
        android:fontFamily="@font/architects_daughter"
        android:text="@string/buy"
        android:textAppearance="@style/TextAppearance.AppCompat.Large"
        android:visibility="visible" />

</RelativeLayout>
